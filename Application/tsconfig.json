{
  "compilerOptions": {
    "baseUrl": "./",
    "paths":
    {
        "#/*":
        [
            "./Source/Main/*"
        ],
        "@/*":
        [
            "./Source/Renderer/*"
        ],
        "$/*":
        [
            "./Source/Renderer/Domain/*"
        ]
    },
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "Distribution"
  },
  "exclude": ["test", "Release/Build", "Release/Application/Distribution", "Distribution"]
}
