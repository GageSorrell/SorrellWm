{
"[cpp]":{
    "editor.defaultFormatter": "xaver.clang-format"
},
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    // ".erb/dll": true,
    "Release/{build,app/Distribution}": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "package-lock.json": true,
    "*.{css,sass,scss}.d.ts": true
  }
}
